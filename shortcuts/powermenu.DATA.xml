<?xml version='1.0' encoding='UTF-8'?>
<shortcuts>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>$LOCALIZE[20183]</label>
        <action>ReloadSkin()</action>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
	<shortcut>
		<defaultID>plugin.kill.kodi</defaultID>
		<label>Kill Kodi</label>
		<label2>Power Menu Shortcut</label2>
		<icon>special://skin/extras/icons/folder.png</icon>
		<thumb>special://skin/extras/icons/1_kill2.png</thumb>
		<action>ActivateWindow(10001,"plugin://plugin.kill.kodi/",return)</action>
	</shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13012</label>
        <action>Quit()</action>
        <visible>System.ShowExitButton</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13016</label>
        <action>Powerdown()</action>
        <visible>System.CanPowerDown</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13011</label>
        <action>Suspend()</action>
        <visible>System.CanSuspend</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13010</label>
        <action>Hibernate()</action>
        <visible>System.CanHibernate</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13013</label>
        <action>Reset()</action>
        <visible>System.CanReboot</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
	<shortcut>
		<defaultID>reboottoandroid</defaultID>
		<label>Reboot to Android</label>
		<label2>Power Menu Shortcut</label2>
		<icon>special://skin/extras/icons/android.png</icon>
		<thumb />
		<action>System.ExecWait("/usr/sbin/rebootfromnand")</action>
		<action>Reboot()</action>
		<visible>System.PathExist("/dev/env")</visible>
		<disabled>True</disabled>
	</shortcut>
	<shortcut>
		<defaultID>13005</defaultID>
		<label>13005</label>
		<label2>Kodi Command</label2>
		<icon>special://skin/extras/icons/power.png</icon>
		<thumb />
		<action>ShutDown()</action>
		<disabled>True</disabled>
	</shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>20126</label>
        <action>dialog.close(all,true)</action>
        <action>System.LogOff</action>
        <visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
        <visible>System.Loggedon</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>20046</label>
        <altlabel>20045</altlabel>
        <usealttexture>!System.IsMaster</usealttexture>
        <action>xbmc.mastermode</action>
        <visible>System.HasLocks</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13017</label>
        <action>InhibitIdleShutdown(true)</action>
        <visible>System.HasShutdown +!System.IsInhibit</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>13018</label>
        <action>InhibitIdleShutdown(false)</action>
        <visible>System.HasShutdown + System.IsInhibit</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>20150</label>
        <action>AlarmClock(shutdowntimer,Shutdown())</action>
        <visible>!System.HasAlarm(shutdowntimer)</visible>
        <visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>20151</label>
        <action>CancelAlarm(shutdowntimer)</action>
        <visible>System.HasAlarm(shutdowntimer)</visible>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
    <shortcut>
        <label2>Power Menu Shortcut</label2>
        <label>5</label>
        <action>ActivateWindow(Settings)</action>
        <icon>special://skin/extras/icons/power.png</icon>
    </shortcut>
</shortcuts>
